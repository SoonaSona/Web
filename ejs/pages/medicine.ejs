<link rel="stylesheet" href="/css/medicine.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<div class="container-fluid h-100 d-flex flex-column p-0">

    <div class="card border-0 shadow-sm mb-2 bg-white">
        <div class="card-body p-3">
            
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="d-flex align-items-center">
                    <div class="bg-primary text-white rounded p-2 me-3">
                        <i class="bi bi-capsule fs-4"></i>
                    </div>
                    <div>
                        <h5 class="fw-bold mb-0 text-primary">Medication Order</h5>
                        <small class="text-muted">ลงทะเบียนจัดยาผู้ป่วยใน</small>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <div class="input-group input-group-sm">
                        <span class="input-group-text bg-light">วันที่</span>
                        <input type="date" class="form-control" id="currentDate">
                    </div>
                    <select class="form-select form-select-sm" style="width: 150px;">
                        <option selected>All Wards</option>
                        <option>Ward 01</option>
                        <option>Ward 02</option>
                    </select>
                </div>
            </div>

            <div class="d-flex flex-wrap justify-content-between align-items-end gap-2">
                
                <div class="btn-group" role="group">
                    <input type="radio" class="btn-check" name="level" id="lvlAll" autocomplete="off" checked>
                    <label class="btn btn-sm btn-outline-primary" for="lvlAll">ทั้งหมด</label>
                  
                    <input type="radio" class="btn-check" name="level" id="lvlIRx" autocomplete="off">
                    <label class="btn btn-sm btn-outline-primary" for="lvlIRx">IRx</label>
                  
                    <input type="radio" class="btn-check" name="level" id="lvlTRx" autocomplete="off">
                    <label class="btn btn-sm btn-outline-primary" for="lvlTRx">TRx</label>

                    <input type="radio" class="btn-check" name="level" id="lvlEMx" autocomplete="off">
                    <label class="btn btn-sm btn-outline-primary" for="lvlEMx">EMx</label>

                    <input type="radio" class="btn-check" name="level" id="lvlATO" autocomplete="off">
                    <label class="btn btn-sm btn-outline-primary" for="lvlATO">ATO</label>
                </div>

                <div class="d-flex gap-2">
                    <select class="form-select form-select-sm" style="width: 140px;">
                        <option selected disabled>-- Med Type --</option>
                        <option>List 1</option>
                        <option>List 2</option>
                    </select>
                    <select class="form-select form-select-sm" style="width: 140px;">
                        <option selected disabled>-- Status --</option>
                        <option>รอจัดยา</option>
                        <option>จ่ายแล้ว</option>
                    </select>
                </div>

                <div class="d-flex gap-1 ms-auto">
                    <button class="btn btn-sm btn-info text-white"><i class="bi bi-basket"></i> จัดยา</button>
                    <button class="btn btn-sm btn-warning text-dark"><i class="bi bi-search"></i> ตรวจสอบ</button>
                    <button class="btn btn-sm btn-success"><i class="bi bi-check-circle"></i> จ่ายแล้ว</button>
                    <button class="btn btn-sm btn-secondary"><i class="bi bi-clock-history"></i> ค้างจ่าย</button>
                    <div class="vr mx-2"></div>
                    
                    <button class="btn btn-sm btn-primary shadow-sm" data-bs-toggle="modal" data-bs-target="#newOrderModal">
                        <i class="bi bi-plus-lg"></i> Add New
                    </button>
                </div>
            </div>

        </div>
    </div>

    <div class="card border-0 shadow-sm flex-grow-1 overflow-hidden">
        <div class="card-body p-0 table-responsive">
            <table class="table table-hover table-bordered table-striped mb-0 text-nowrap align-middle">
                <thead class="table-primary sticky-top">
                    <tr>
                        <th>Order No.</th>
                        <th>วันเวลาที่สั่ง</th>
                        <th>Type</th>
                        <th class="text-center">เตียง</th>
                        <th>ชื่อ-นามสกุล</th>
                        <th>แพทย์ที่สั่ง</th>
                        <th>ผู้บันทึก</th>
                        <th class="text-center">จำนวน</th>
                        <th class="text-end">มูลค่า</th>
                        <th class="text-center">สถานะ</th> </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="fw-bold text-primary">302603</td>
                        <td>13/04/2568 10:30</td>
                        <td><span class="badge bg-info text-dark">IRx</span></td>
                        <td class="text-center">062</td>
                        <td>นายโฟก โฟกโฟก</td>
                        <td>นพ.สมชาย ใจดี</td>
                        <td>พยาบาลเอ</td>
                        <td class="text-center">2</td>
                        <td class="text-end">3.45</td>
                        <td class="text-center"><span class="badge bg-secondary">ไม่ Screen</span></td>
                    </tr>
                    <tr>
                        <td class="fw-bold text-primary">302604</td>
                        <td>13/04/2568 11:15</td>
                        <td><span class="badge bg-warning text-dark">TRx</span></td>
                        <td class="text-center">063</td>
                        <td>นางสาวใจ หวังดี</td>
                        <td>พญ.สมหญิง</td>
                        <td>พยาบาลบี</td>
                        <td class="text-center">5</td>
                        <td class="text-end">120.00</td>
                        <td class="text-center"><span class="badge bg-success">จ่ายแล้ว</span></td>
                    </tr>
                    <% for(let i=0; i<10; i++) { %>
                    <tr>
                        <td class="fw-bold text-primary">30260<%= i+5 %></td>
                        <td>13/04/2568 12:00</td>
                        <td><span class="badge bg-danger">EMx</span></td>
                        <td class="text-center">06<%= i+4 %></td>
                        <td>ผู้ป่วย ทดสอบระบบ</td>
                        <td>นพ.ทดสอบ</td>
                        <td>พยาบาลซี</td>
                        <td class="text-center">1</td>
                        <td class="text-end">50.00</td>
                        <td class="text-center"><span class="badge bg-warning text-dark">รอตรวจสอบ</span></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
        <div class="card-footer bg-white small text-muted">
            <div class="d-flex justify-content-between">
                <span>ทั้งหมด 12 รายการ</span>
                <span>ยอดรวมมูลค่า: 623.45 บาท</span>
            </div>
        </div>
    </div>

</div>

<div class="modal fade" id="newOrderModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">
                    <i class="bi bi-capsule me-2"></i>New Medication Order
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="row g-3">
                    <div class="col-12">
                        <h6 class="border-bottom pb-2 text-primary fw-bold">ข้อมูลผู้ป่วย</h6>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">HN</label>
                        <input type="text" class="form-control" placeholder="Search HN...">
                    </div>
                    <div class="col-md-5">
                        <label class="form-label">ชื่อ-นามสกุล</label>
                        <input type="text" class="form-control" >
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Ward</label>
                        <select class="form-select">
                            <option>Ward 01</option>
                            <option>Ward 02</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">เตียง</label>
                        <input type="text" class="form-control" placeholder="No.">
                    </div>

                    <div class="col-12 mt-4">
                        <h6 class="border-bottom pb-2 text-primary fw-bold">รายการยา (Medication)</h6>
                    </div>
                    
                    <div class="col-md-4">
                        <label class="form-label">ประเภท Order</label>
                        <div class="btn-group w-100" role="group">
                            <input type="radio" class="btn-check" name="modalLvl" id="modalIRx" checked>
                            <label class="btn btn-outline-primary" for="modalIRx">IRx</label>
                            <input type="radio" class="btn-check" name="modalLvl" id="modalTRx">
                            <label class="btn btn-outline-warning text-dark" for="modalTRx">TRx</label>
                            <input type="radio" class="btn-check" name="modalLvl" id="modalEMx">
                            <label class="btn btn-outline-danger" for="modalEMx">EMx</label>
                        </div>
                    </div>
                    
                    <div class="col-md-8">
                        <label class="form-label">แพทย์ผู้สั่ง</label>
                        <select class="form-select">
                            <option selected>เลือกแพทย์...</option>
                            <option>นพ.สมชาย ใจดี</option>
                        </select>
                    </div>

                    <div class="col-12">
                        <label class="form-label">รายการยา/เวชภัณฑ์</label>
                        <textarea class="form-control" rows="3" placeholder="พิมพ์ชื่อยา หรือรหัสยา..."></textarea>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">จำนวน (Qty)</label>
                        <input type="number" class="form-control" value="1">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">ราคาประเมิน (บาท)</label>
                        <input type="number" class="form-control text-end" placeholder="0.00">
                    </div>
                </form>
            </div>
            <div class="modal-footer bg-light">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ยกเลิก</button>
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">
                    <i class="bi bi-save me-1"></i> บันทึก Order
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('currentDate').valueAsDate = new Date();
</script>
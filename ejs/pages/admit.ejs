<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    
    <style>
        /* จัด Layout แบบ Flexbox: บังคับให้อยู่บรรทัดเดียวกัน */
        .page-wrapper {
            display: flex;
            width: 100%;
            height: calc(100vh - 60px); /* ความสูงเต็มจอ ลบ Header */
            overflow: hidden; /* ห้าม Scroll ที่ Body ให้ไป Scroll ข้างในแทน */
            background-color: #f4f6f9;
        }

        /* ส่วนซ้าย: ฟอร์ม (ยืดหยุ่นเต็มพื้นที่) */
        .left-panel {
            flex: 1; /* กินพื้นที่ที่เหลือทั้งหมด */
            overflow-y: auto; /* ถ้าเนื้อหายาว ให้เลื่อนลงได้ */
            padding: 20px;
        }

        /* ส่วนขวา: แถบรายชื่อ (ล็อคความกว้าง 320px) */
        .right-sidebar {
            width: 320px;
            min-width: 320px; /* ห้ามหด */
            background: white;
            border-left: 1px solid #ddd;
            padding: 15px;
            overflow-y: auto; /* เลื่อนลงได้ */
            box-shadow: -2px 0 5px rgba(0,0,0,0.05);
        }

        /* การ์ดรายชื่อทางขวา */
        .case-card {
            background: #fff;
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            padding: 12px;
            margin-bottom: 10px;
            cursor: pointer;
            transition: all 0.2s;
            position: relative;
        }
        .case-card:hover {
            border-color: #007bff;
            background-color: #f8f9fa;
            transform: translateX(-3px);
        }
        .case-card.active {
            border-left: 4px solid #007bff;
            background-color: #e7f1ff;
        }
    </style>
<div class="page-wrapper">
    
    <div class="left-panel">
        <form action="/main/admit" method="POST" id="admitForm">
            <input type="hidden" name="an" id="anInput">

            <div class="admit-container bg-white p-4 rounded shadow-sm">
                <div class="d-flex align-items-center mb-4 pb-3 border-bottom">
                    <div class="avatar-box me-3 text-primary">
                        <i class="bi bi-hospital fs-1"></i>
                    </div>
                    <div>
                        <h4 class="mb-0 text-primary">รับผู้ป่วยใน (Admit Case)</h4>
                        <small class="text-muted">กรอกข้อมูลเพื่อสร้าง AN ใหม่ หรือเลือกจากรายการขวามือเพื่อดูข้อมูล</small>
                    </div>
                </div>

                <div class="row g-3 mb-3">
                    <div class="col-md-4">
                        <label class="form-label fw-bold">HN (ผู้ป่วย)</label>
                        <div class="input-group">
                            <select name="hn" id="hnSelect" required class="form-select">
                                <option value="" selected disabled>-- ค้นหา/เลือกผู้ป่วย --</option>
                                <% patients.forEach(function(p) { %>
                                    <option value="<%= p.hn %>" data-info='<%= JSON.stringify(p) %>'>
                                        <%= p.hn %> : <%= p.first_name %> <%= p.last_name %>
                                    </option>
                                <% }); %>
                            </select>
                            
                            <button class="btn btn-success" type="button" data-bs-toggle="modal" data-bs-target="#addPatientModal">
                                <i class="bi bi-person-plus-fill"></i> เพิ่ม
                            </button>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">ชื่อ-นามสกุล</label>
                        <input type="text" id="pName" class="form-control" readonly />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">อายุ</label>
                        <input type="text" id="pAge" class="form-control" readonly />
                    </div>
                     <div class="col-md-2">
                        <label class="form-label">วันที่ Admit</label>
                        <input type="date" name="admit_date" id="admitDate" class="form-control" required />
                    </div>
                </div>

                <div class="row g-3 mb-3">
                    <div class="col-md-4">
                        <label class="form-label">Ward</label>
                        <select class="form-select"><option>IPD Gen</option></select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label fw-bold">เตียง (Bed)</label>
                        <div class="input-group">
                            <input type="text" id="selectedBed" name="room_bed" class="form-control" readonly placeholder="คลิกเพื่อเลือก..." required />
                            <button class="btn btn-outline-primary" id="btnChooseBed" type="button">
                                <i class="bi bi-grid-3x3"></i> เลือก
                            </button>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">แพทย์เจ้าของไข้</label>
                        <select name="doctor" id="doctorSelect" class="form-select">
                            <option value="">-- เลือกแพทย์ --</option>
                            <option value="นพ.สมชาย ใจดี">นพ.สมชาย ใจดี</option>
                            <option value="พญ.มีนา น่ารัก">พญ.มีนา น่ารัก</option>
                        </select>
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label">การวินิจฉัยโรค / อาการสำคัญ (Diagnosis)</label>
                    <textarea name="diagnosis" id="diagnosisText" class="form-control" rows="4"></textarea>
                </div>

                <div class="d-flex justify-content-end gap-2 border-top pt-3">
                    <button type="button" class="btn btn-secondary px-4" onclick="resetForm()">
                        <i class="bi bi-arrow-clockwise"></i> ล้างข้อมูล
                    </button>
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-save"></i> บันทึก Admit
                    </button>
                </div>
            </div>
        </form>
    </div>

    <div class="right-sidebar">
        <h5 class="mb-3 text-dark fw-bold"><i class="bi bi-list-task"></i> รายการ Admit</h5>
        <input type="text" id="searchBox" class="form-control form-control-sm mb-3" placeholder="ค้นหาชื่อ..." autocomplete="off">
        
        <div id="caseListContainer">
            <% if (admittedList.length === 0) { %>
                <div class="text-center text-muted mt-5">
                    <i class="bi bi-inbox fs-1"></i><br>ไม่มีผู้ป่วย Admit
                </div>
            <% } else { %>
                <% admittedList.forEach(function(item) { %>
                    <div class="case-card" onclick='loadCase(<%- JSON.stringify(item) %>)'>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="badge bg-primary"><%= item.an %></span>
                            <small class="text-muted">
                                <%= item.admit_date ? new Date(item.admit_date).toLocaleDateString('th-TH') : '-' %>
                            </small>
                        </div>
                        <div class="fw-bold mt-2 text-dark"><%= item.first_name %> <%= item.last_name %></div>
                        <div class="small text-muted">
                            <i class="bi bi-hospital"></i> ห้อง: <%= item.room_no %>-<%= item.bed_no %>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>

</div>

<div class="modal fade" id="bedModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">เลือกเตียงผู้ป่วย</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body bg-light">
                <div class="d-flex gap-3 p-3">
                    <div class="bed-card available p-3 border bg-white rounded text-center" style="cursor:pointer; min-width:100px;" onclick="selectBed('101-1')">
                        <i class="bi bi-usb-drive-fill fs-2 text-success"></i><br>101-1 <br><small class="text-success">ว่าง</small>
                    </div>
                    <div class="bed-card available p-3 border bg-white rounded text-center" style="cursor:pointer; min-width:100px;" onclick="selectBed('101-2')">
                        <i class="bi bi-usb-drive-fill fs-2 text-success"></i><br>101-2 <br><small class="text-success">ว่าง</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addPatientModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="/main/add-patient" method="POST">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title"><i class="bi bi-person-plus"></i> ลงทะเบียนผู้ป่วยใหม่</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">เลข HN *</label>
                        <input type="text" name="hn" class="form-control" required placeholder="เช่น 664883">
                    </div>
                    <div class="row g-2 mb-3">
                        <div class="col">
                            <label class="form-label">ชื่อจริง</label>
                            <input type="text" name="first_name" class="form-control" required>
                        </div>
                        <div class="col">
                            <label class="form-label">นามสกุล</label>
                            <input type="text" name="last_name" class="form-control" required>
                        </div>
                    </div>
                    <div class="row g-2 mb-3">
                        <div class="col-4">
                            <label class="form-label">อายุ (ปี)</label>
                            <input type="number" name="age" class="form-control">
                        </div>
                        <div class="col-4">
                            <label class="form-label">น้ำหนัก (kg)</label>
                            <input type="number" step="0.1" name="weight" class="form-control">
                        </div>
                        <div class="col-4">
                            <label class="form-label">ส่วนสูง (cm)</label>
                            <input type="number" name="height" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ยกเลิก</button>
                    <button type="submit" class="btn btn-success">บันทึกผู้ป่วย</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    
document.addEventListener("DOMContentLoaded", function () {

    // Modal เลือกเตียง
    const bedModalEl = document.getElementById("bedModal");
    const bedModal = new bootstrap.Modal(bedModalEl);

    const btnChooseBed = document.getElementById("btnChooseBed");
    if (btnChooseBed) {
        btnChooseBed.addEventListener("click", function () {
            bedModal.show();
        });
    }
});

function selectBed(bedName) {
    document.getElementById("selectedBed").value = bedName;
    const bedModal = bootstrap.Modal.getInstance(document.getElementById("bedModal"));
    bedModal.hide();
}


// Auto-fill ข้อมูลผู้ป่วย (logic เดิม)
hnSelect.addEventListener("change", function() {
    const option = this.options[this.selectedIndex];
    if(option.value) {
        try {
            const data = JSON.parse(option.getAttribute("data-info"));
            fillPatientInfo(data);
        } catch (e) {
            console.error("JSON parse error:", e);
        }
    }
});

function fillPatientInfo(data) {
    document.getElementById("pName").value = data.first_name + " " + data.last_name;
    document.getElementById("pAge").value = (data.age ? data.age : "-") + " ปี";
}

// โหลดข้อมูลจาก sidebar (logic เดิม)
function loadCase(data) {
    hnSelect.value = data.hn;
    fillPatientInfo(data);

    document.getElementById("anInput").value = data.an || "";
    document.getElementById("selectedBed").value = (data.room_no && data.bed_no) ? (data.room_no + "-" + data.bed_no) : "";
    document.getElementById("doctorSelect").value = data.main_doctor || "";
    document.getElementById("diagnosisText").value = data.diagnosis || "";

    if(data.admit_date) {
        const dateObj = new Date(data.admit_date);
        document.getElementById("admitDate").value = dateObj.toISOString().split('T')[0];
    }

    document.querySelectorAll('.case-card').forEach(c => c.classList.remove('active'));
    if(window.event && window.event.currentTarget) {
        window.event.currentTarget.classList.add('active');
    }
}

// Auto select HN จาก URL (logic เดิม)
document.addEventListener("DOMContentLoaded", function() {
    const urlParams = new URLSearchParams(window.location.search);
    const targetHn = urlParams.get('hn');

    if (targetHn) {
        hnSelect.value = targetHn;
        hnSelect.dispatchEvent(new Event('change'));
        window.history.replaceState(null, null, window.location.pathname);
    }
});



</script>
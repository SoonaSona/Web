<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary"><i class="bi bi-person-fill-doctor me-2"></i>Doctor Station</h2>
        <span class="badge bg-white text-dark shadow-sm px-3 py-2">
            ผู้ใช้งาน: <%= user %>
        </span>
    </div>

    <div class="bg-white rounded shadow-sm p-4">
        <h5 class="mb-3 text-secondary">รายชื่อผู้ป่วยใน (In-Patient List)</h5>
        
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>เตียง</th>
                        <th>HN / AN</th>
                        <th>ชื่อ-สกุล</th>
                        <th>แพทย์เจ้าของไข้</th>
                        <th>การวินิจฉัย</th>
                        <th class="text-center">จัดการ</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (patients.length > 0) { %>
                        <% patients.forEach(p => { %>
                            <tr>
                                <td>
                                    <span class="badge bg-info text-dark rounded-pill">
                                        <%= p.room_no %>-<%= p.bed_no %>
                                    </span>
                                </td>
                                <td>
                                    <div class="fw-bold"><%= p.hn %></div>
                                    <small class="text-muted"><%= p.an %></small>
                                </td>
                                <td>
                                    <%= p.first_name %> <%= p.last_name %>
                                    <br>
                                    <small class="text-muted">อายุ <%= p.age %> ปี</small>
                                </td>
                                <td><%= p.main_doctor || '-' %></td>
                                <td><%= p.diagnosis || '-' %></td>
                                <td class="text-center">
                                    <a href="/main/nurse/orders/<%= p.hn %>" class="btn btn-primary btn-sm ...">
                                    สั่งการรักษา
                                    </a>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="6" class="text-center py-4 text-muted">
                                ไม่มีผู้ป่วย Admit ในขณะนี้
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>
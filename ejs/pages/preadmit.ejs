<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css"
/>
<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
  rel="stylesheet"
/>
<div class="container-fluid p-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="fw-bold">Pre-Admit</h3>
    <button
      class="btn btn-primary"
      data-bs-toggle="modal"
      data-bs-target="#newAdmitModal"
    >
      <i class="bi bi-plus-circle"></i> ลงรายการใหม่
    </button>
  </div>

  <div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
      <div class="row g-3">
        <div class="col-md-3">
          <label class="form-label text-muted">วันที่</label>
          <input type="date" class="form-control" />
        </div>
        <div class="col-md-9">
          <label class="form-label text-muted">ค้นหา</label>
          <div class="input-group">
            <span class="input-group-text bg-light"
              ><i class="bi bi-search"></i
            ></span>
            <input
              type="text"
              class="form-control"
              placeholder="Search name, HN, order id..."
            />
          </div>
        </div>
        <div class="col-md-4">
          <label class="form-label text-muted">แผนก</label>
          <select class="form-select">
            <option>01 : อายุรกรรม</option>
            <option>02 : ศัลยกรรม</option>
          </select>
        </div>
        <div class="col-md-4">
          <label class="form-label text-muted">แพทย์เจ้าของคนไข้</label>
          <select class="form-select">
            <option selected>เลือกแพทย์...</option>
            <option>นพ. สมชาย ใจดี</option>
          </select>
        </div>
        <div class="col-md-4 d-flex align-items-end">
          <button class="btn btn-secondary w-100">Clear Filter</button>
        </div>
      </div>
    </div>
  </div>

  <div class="card border-0 shadow-sm">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover align-middle mb-0" id="admitTable">
          <thead class="table-light">
            <tr>
              <th class="py-3 ps-3">No</th>
              <th>วันที่ Admit</th>
              <th>Order Id</th>
              <th>HN</th>
              <th>ชื่อ-นามสกุล</th>
              <th>เบอร์ติดต่อ</th>
              <th>แพทย์ Order</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="ps-3">1</td>
              <td><span class="badge bg-info text-dark">19/01/2568</span></td>
              <td>590</td>
              <td>41414165</td>
              <td class="fw-bold text-primary">นายโกฟาโมย หวังดี</td>
              <td>093-758-4922</td>
              <td>นพ. รักษา ดีมาก</td>
            </tr>
            <tr>
              <td class="ps-3">2</td>
              <td><span class="badge bg-info text-dark">19/01/2568</span></td>
              <td>589</td>
              <td>41414165</td>
              <td class="fw-bold text-primary">นางสาวใจดี มีสุข</td>
              <td>081-234-5678</td>
              <td>พญ. สวยใส ใจดี</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<div
  class="modal fade"
  id="newAdmitModal"
  tabindex="-1"
  aria-labelledby="newAdmitModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title fw-bold" id="newAdmitModalLabel">
          <i class="bi bi-person-plus-fill me-2"></i>ลงรายการ Pre-Admit ใหม่
        </h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form class="row g-3">
          <div class="col-md-6">
            <label class="form-label">HN</label>
            <input
              type="text"
              class="form-control"
              placeholder="ระบุ HN"
              required
            />
          </div>
          <div class="col-md-6">
            <label class="form-label">วันที่ Admit</label>
            <input type="date" class="form-control" required />
          </div>
          <div class="col-12">
            <label class="form-label">ชื่อ-นามสกุล ผู้ป่วย</label>
            <input
              type="text"
              class="form-control"
              placeholder="ระบุชื่อ-นามสกุล"
              required
            />
          </div>
          <div class="col-md-6">
            <label class="form-label">เบอร์ติดต่อ</label>
            <input
              type="text"
              class="form-control"
              placeholder="0xx-xxx-xxxx"
            />
          </div>
          <div class="col-md-6">
            <label class="form-label">แพทย์เจ้าของไข้</label>
            <select class="form-select">
              <option selected>เลือกแพทย์...</option>
              <option>นพ. รักษา ดีมาก</option>
              <option>พญ. สวยใส ใจดี</option>
            </select>
          </div>
          <div class="col-12">
            <label class="form-label">หมายเหตุ</label>
            <textarea class="form-control" rows="2"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer bg-light">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          ยกเลิก
        </button>
        <button type="button" class="btn btn-primary" data-bs-dismiss="modal">
          <i class="bi bi-save me-1"></i> บันทึกข้อมูล
        </button>
      </div>
    </div>
  </div>
</div>
